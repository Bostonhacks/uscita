extends layout

block content
  .container
    h1 Register Page
    if info
      p(style="color: red") !{info}

    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Student Name')
      .form-group
          input.form-control(type='email', name="email", placeholder='Email')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form-group
        input.form-control(type='password', name="passwordConf", placeholder='Password Confirmation')
      .form-group
        input.form-control(type='text', name="block", placeholder='Enter Your Block')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel