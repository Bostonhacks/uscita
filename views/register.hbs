<div class='container'>
  <h1> Register Page </h1>
  {{#if info}}
    p(style="color: red") !{info}
    <p style="color: red"> {{info}}</p>
  {{/if}}

  <br>
  <form role="form" action="/register" method="POST" style="max-width: 300px;">
    <div class='form-group'>
      <input class='form-control' type="text" name="username" placeholder="Student Name">
    </div>
    <div class='form-group'>
      <input class='form-control' type="email" name="email" placeholder="Email">
    </div>
    <div class='form-group'>
      <input class='form-control' type="password" name="password" placeholder="Password">
    </div>
    <div class='form-group'>
      <input class='form-control' type="password" name="passwordConf" placeholder="Password Confirmation">
    </div>
    <div class='form-group'>
      <input class='form-control' type="text" name="block" placeholder="Enter Your Block">
    </div>
    <button class="btn btn-default" type="submit">Submit</button> &nbsp;
    <a href="/">
      <button class="btn btn-primary" type="button">Cancel</button></a>
  </form>
</div>
